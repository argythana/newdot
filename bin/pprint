#!/usr/bin/env bash
#
# A pretty print command. Works with xml and json.
#

#set -euxo pipefail
set -euo pipefail

(($#)) || exit
for i; do
    c=''

    if [[ ! -r $i ]]; then
        echo "$0: file is unreadable: \`$i'" >&2
        continue
    fi

    case $i in
        *.xml)  c=(xmllint --format);;
        *.json) c=(python -m json.tool);;
        *.yml)  c=(yamllint -f);;
        *.yaml) c=(yamllint -f);;
        *)      echo "$0: unrecognized file extension: \`$i'" >&2
                continue;;
    esac

    command "${c[@]}" "$i"
    ((e = e || $?))
done
return "$e"
