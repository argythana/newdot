[user]
    email = pmav99@gmail.com
    name = Panos Mavrogiorgos
[push]
    default = simple
[diff]
    algorithm = patience
    tool = gvimdiff
[color]
    diff = auto
    status = auto
    branch = auto
    ui =true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    autocrlf = input
    editor = vim
[grep]
    linenumber = true
[github]
    user = pmav99
[gitlab]
    user = pmav99
[bitbucket]
    user = pmav99
[apply]
    whitespace = nowarn
[pull]
    rebase = true
[include]
    path = ~/.gitconfig.local
[mergetool]
  prompt = false
[merge]
  conflictstyle = diff3
[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[gui]
	fontui = -family \"Noto Sans\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Liberation Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
